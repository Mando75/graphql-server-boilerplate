{
  "name": "graphql-server-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn run tsc -p ./",
    "start": "node dist/index.js",
    "run": "NODE_ENV=development nodemon --watch ./dist ./dist/index.js",
    "test": "NODE_ENV=test jest --coverage --runInBand --detectOpenHandles",
    "test-with-coverage": "yarn test && cat ./coverage/lcov.info | codacy-coverage",
    "gen-types": "yarn run schema:download && yarn run schema:generate-types",
    "schema:download": "apollo schema:download --endpoint=http://localhost:4000",
    "schema:generate-types": "gql2ts schema.json -o src/types/graphql.d.ts"
  },
  "description": "Boilerplate for setting up a GraphQL Server with Typescript, TypeORM, Postgresql and Jest",
  "main": "index.js",
  "repository": "git@gitlab.com:Mando75/graphql-server-boilerplate.git",
  "author": "Bryan MÃ¼ller <bmuller0975@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.1.0",
    "bcrypt": "^3.0.2",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.2",
    "ioredis": "^4.2.0",
    "node-fetch": "^2.3.0",
    "pg": "^7.5.0",
    "reflect-metadata": "^0.1.10",
    "typeorm": "^0.2.8",
    "uuid": "^3.3.2",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.0.3",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.7",
    "@types/node": "^10.12.2",
    "@types/node-fetch": "^2.1.3",
    "@types/pg": "^7.4.11",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.1",
    "apollo": "^1.9.2",
    "babel-jest": "^23.6.0",
    "codacy-coverage": "^3.2.0",
    "es6-shim": "^0.35.3",
    "gql2ts": "^1.10.1",
    "graphql-request": "^1.8.2",
    "jest": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "nodemon": "^1.18.4",
    "prettier": "1.14.3",
    "start-server-and-test": "^1.7.5",
    "ts-jest": "^23.10.4",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
